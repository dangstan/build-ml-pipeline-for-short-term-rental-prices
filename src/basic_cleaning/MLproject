name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: sample dataset to clean
        type: string

      output_artifact:
        description: cleaned dataset
        type: string

      output_type:
        description: the output tybe for tracking matters
        type: string

      output_description:
        description: Text describing what the output aims to be
        type: string

      min_price:
        description: minimum price to account for
        type: float

      max_price:
        description: maximum price to account for
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price} 
